<div>

  <h1>Formulario de Producto</h1>
  <form id="productForm" action="/realTime" method="post">
    <label for="titulo">Título:</label>
    <input type="text" id="titulo" name="title" required />

    <label for="descripcion">Descripción:</label>
    <textarea id="descripcion" name="description" required></textarea>

    <label for="precio">Precio:</label>
    <input
      type="number"
      id="precio"
      name="price"
      min="0"
      step="0.01"
      required
    />

    <label for="codigo">Código:</label>
    <input type="text" id="codigo" name="code" required />

    <label for="stock">Stock:</label>
    <input type="number" id="stock" name="stock" min="0" required />

    <label for="categoria">Categoría:</label>
    <input type="text" id="categoria" name="category" required />

    <label for="estado">Estado:</label>
    <select id="estado" name="status" required>
      <option value="activo">Activo</option>
      <option value="inactivo">Inactivo</option>
    </select>

    <input type="submit" value="Agregar Producto" />
  </form>

  <h1>Lista de Productos</h1>
  <ul class="product-list">
    {{#each products}}
      <li data-product-id="{{id}}">
        <div class="product-image">
          <img src="{{thumbnail}}" alt="{{title}}" />
        </div>
        <div class="product-details">
          <h2>{{title}}</h2>
          <p>{{description}}</p>
          <p>Precio: ${{price}}</p>
          <p>Código: {{code}}</p>
          <p>Stock: {{stock}}</p>
          <p>Categoría: {{category}}</p>
          <p>ID: {{id}}</p>
          <p>Estado: {{#if status}}Activo{{else}}Inactivo{{/if}}</p>
          <button class="delete-button" data-id="{{id}}">Eliminar</button>
        </div>
      </li>
    {{/each}}
  </ul>
</div>